<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="room" class="entities.Room" scope="prototype"/>

    <bean id="roomDao" class="dao.RoomDAO" abstract="true"/>

    <bean id="jdbcRoomDAO" class="dao.jdbcDaoImpl.JdbcRoomDAOImpl" parent="roomDao"/>

    <bean id="roomService" class="services.RoomService" depends-on="jdbcRoomDAO">
        <property name="jdbcDao" ref="jdbcRoomDAO"/>
        <constructor-arg name="dao" ref="jdbcRoomDAO"/>
    </bean>
</beans>